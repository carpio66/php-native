<IfModule mod_rewrite.c>
    RewriteEngine On
    #RewriteBase /
    RewriteCond $1 !^(index\.php)
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

<IfModule !mod_rewrite.c>
    ErrorDocument 404 index.php
</IfModule> 

<IfModule mod_php5.c>
php_flag display_errors off
</IfModule>

IndexIgnore * 