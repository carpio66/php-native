<IfModule mod_rewrite.c>
    # For sites running on a port other than 80
    RewriteEngine On
    RewriteCond %{HTTP_HOST}   !^www\.rewriteejemplos\.com [NC]
    RewriteCond %{HTTP_HOST}   !^$
    RewriteCond %{SERVER_PORT} !^80$
    RewriteRule ^/(.*)         http://www.rewriteejemplos.com:%{SERVER_PORT}/$1 [L,R]
    # And for a site running on port 80
    RewriteCond %{HTTP_HOST}   !^www\.rewriteejemplos\.com [NC]
    RewriteCond %{HTTP_HOST}   !^$
    RewriteRule ^/(.*)         http://www.rewriteejemplos.com/$1 [L,R]
</IfModule>
