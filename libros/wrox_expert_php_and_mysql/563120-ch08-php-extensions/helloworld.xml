  <globals>
    <phpini name="greeting" type="string" access="user" value="hello" />
  </globals>

  <release>
    <version>0.1</version>
    <date>2009-10-12</date>
    <state>alpha</state>
    <notes>
      First version of this software for the book
      Expert PHP and MYSQL. 
    </notes>
  </release>

  <interface name="IGreeting">
    <function name="sayGreeting">
      <proto>mixed sayGreeing(string name [, bool do_return])</proto>
    </function>
  </interface>

  <class name="SimpleGreeter">
    <implements interface="IGreeting" />

    <function name="sayGreeting">
      <proto>mixed sayGreeting(string name [, bool do_return])</proto>
    </function>
  </class>

  <class name="ComplexGreeter" extends="SimpleGreeter">

    <constant name="OUTPUT_PRINT" type="int" value="0" />
    <constant name="OUTPUT_ARRAY" type="int" value="1" />
    <constant name="OUTPUT_STRING" type="int" value="2" />

    <property name="separator" type="string" value="&lt;br /&gt;\n" access="public" /> 

    <function name="arraySay">
      <proto>array arraySay(array names)</proto>
    </function>

    <function name="mysqliSay">
      <proto>mixed mysqliSay( mixed result, string field [, int output_type] )</proto>
    </function>
  </class>

  <deps>
    <extension name="standard" />
    <extension name="mysqli" type="optional" />
  </deps>

</extension>
